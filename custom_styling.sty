\newcommand{\bibname}[2]{%
    \def\@mylastname{#1}%
    \def\@myfirstname{#2}%
}

\renewcommand*{\mkbibnamefamily}[1]{%
    \ifboolexpr{
        (
            test {\ifdefstrequal{\namepartfamily}{\@mylastname}}
            or
            test {\ifdefstrequal{\namepartfamily}{\@mylastname*}}
        )
        and
        test {\ifdefstrequal{\namepartgiven}{\@myfirstname}}
    }
    {\textbf{#1}}%
    {#1}%
}

\renewcommand*{\mkbibnamegiven}[1]{%
    \ifboolexpr{
        (
            test {\ifdefstrequal{\namepartfamily}{\@mylastname}}
            or
            test {\ifdefstrequal{\namepartfamily}{\@mylastname*}}
        )
        and
        test {\ifdefstrequal{\namepartgiven}{\@myfirstname}}
    }
    {\textbf{#1}}%
    {#1}%
}


